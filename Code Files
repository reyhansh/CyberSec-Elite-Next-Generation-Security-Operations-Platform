import React, { useState, useEffect, useRef } from 'react';
import { Shield, Eye, AlertTriangle, Key, Network, Activity, Search, Zap, Brain, Bug, Terminal, Clock, CheckCircle, AlertCircle, Copy, Check, RefreshCw, Target, BarChart3, TrendingUp, Crosshair, Play, Lock, FileText, Settings, Fingerprint, Radio, Cpu, Server, Globe, Wifi, Code, Hash, Users, Layers, GitBranch, Boxes, Binary, Sparkles, Rocket, Star } from 'lucide-react';
import { LineChart, Line, AreaChart, Area, BarChart, Bar, XAxis, YAxis, CartesianGrid, Tooltip, Legend, ResponsiveContainer, PieChart, Pie, Cell, RadarChart, PolarGrid, PolarAngleAxis, PolarRadiusAxis, Radar as RechartsRadar } from 'recharts';

export default function CyberNexusUltra() {
  const [activeTab, setActiveTab] = useState('nexus');
  const [scanning, setScanning] = useState(false);
  const [aiAnalyzing, setAiAnalyzing] = useState(false);
  const [threats, setThreats] = useState([]);
  const [aiInsights, setAiInsights] = useState([]);
  const [vulnerabilities, setVulnerabilities] = useState([]);
  const [realTimeAlerts, setRealTimeAlerts] = useState([]);
  const [metrics, setMetrics] = useState([]);
  const [credentials, setCredentials] = useState([]);
  const [passwordConfig, setPasswordConfig] = useState({ length: 32, upper: true, lower: true, numbers: true, symbols: true });
  const [generatedPassword, setGeneratedPassword] = useState('');
  const [copied, setCopied] = useState(false);
  const [notification, setNotification] = useState(null);
  const [mousePos, setMousePos] = useState({ x: 0, y: 0 });

  useEffect(() => {
    loadData();
    const i1 = startMonitoring();
    const i2 = updateMetrics();
    
    const handleMouseMove = (e) => {
      setMousePos({ x: e.clientX, y: e.clientY });
    };
    window.addEventListener('mousemove', handleMouseMove);
    
    return () => {
      clearInterval(i1);
      clearInterval(i2);
      window.removeEventListener('mousemove', handleMouseMove);
    };
  }, []);

  const showNotification = (msg, type = 'info') => {
    setNotification({ msg, type });
    setTimeout(() => setNotification(null), 4000);
  };

  const loadData = async () => {
    try {
      const keys = ['threats-ultra', 'ai-ultra', 'vulns-ultra', 'alerts-ultra', 'creds-ultra'];
      const results = await Promise.all(keys.map(k => window.storage.get(k).catch(() => null)));

      if (results[0]) setThreats(JSON.parse(results[0].value));
      if (results[1]) setAiInsights(JSON.parse(results[1].value));
      if (results[2]) setVulnerabilities(JSON.parse(results[2].value));
      if (results[3]) setRealTimeAlerts(JSON.parse(results[3].value));
      if (results[4]) setCredentials(JSON.parse(results[4].value));

      if (!results[0]) initData();
    } catch (error) {
      initData();
    }
  };

  const initData = () => {
    const t = [
      { id: 1, name: 'APT41 Supply Chain Attack', severity: 'critical', desc: 'Sophisticated backdoor in build pipeline', status: 'active', confidence: 98 },
      { id: 2, name: 'LockBit Ransomware', severity: 'critical', desc: 'Active encryption - $2.5M ransom', status: 'contained', confidence: 97 },
      { id: 3, name: 'Credential Theft', severity: 'high', desc: 'Kerberoasting on 23 accounts', status: 'investigating', confidence: 94 }
    ];

    const v = [
      { id: 1, cve: 'CVE-2024-21626', cvss: 9.9, software: 'runc < 1.1.12', desc: 'Container escape vulnerability', exploit: 'Public PoC - Active exploitation', affected: 47 },
      { id: 2, cve: 'CVE-2024-4577', cvss: 9.8, software: 'PHP 8.1.0-8.1.28', desc: 'RCE via argument injection', exploit: 'Metasploit module available', affected: 23 }
    ];

    const met = Array.from({ length: 24 }, (_, i) => ({
      hour: `${i.toString().padStart(2, '0')}:00`,
      threats: Math.floor(Math.random() * 60) + 20,
      blocked: Math.floor(Math.random() * 55) + 18
    }));

    setThreats(t);
    setVulnerabilities(v);
    setMetrics(met);
    
    save('threats-ultra', t);
    save('vulns-ultra', v);
  };

  const save = async (key, data) => {
    try {
      await window.storage.set(key, JSON.stringify(data));
    } catch (error) {
      console.error('Storage error:', error);
    }
  };

  const startMonitoring = () => {
    return setInterval(() => {
      const msgs = [
        { msg: 'Beaconing to APT infrastructure detected', severity: 'critical' },
        { msg: 'Encoded PowerShell execution on endpoint', severity: 'high' },
        { msg: 'Lateral movement via PsExec detected', severity: 'critical' },
        { msg: 'Data exfiltration blocked - 3.2GB', severity: 'high' },
        { msg: 'Privilege escalation attempt', severity: 'critical' },
        { msg: 'Mass file encryption detected', severity: 'critical' }
      ];

      const alert = msgs[Math.floor(Math.random() * msgs.length)];
      const newAlert = {
        id: Date.now(),
        message: alert.msg,
        severity: alert.severity,
        timestamp: new Date().toISOString()
      };

      setRealTimeAlerts(prev => {
        const updated = [newAlert, ...prev.slice(0, 99)];
        save('alerts-ultra', updated);
        return updated;
      });
    }, 3500);
  };

  const updateMetrics = () => {
    return setInterval(() => {
      setMetrics(prev => {
        const newMetric = {
          hour: new Date().getHours().toString().padStart(2, '0') + ':00',
          threats: Math.floor(Math.random() * 60) + 20,
          blocked: Math.floor(Math.random() * 55) + 18
        };
        return [...prev.slice(1), newMetric];
      });
    }, 10000);
  };

  const runAIAnalysis = async () => {
    setAiAnalyzing(true);
    showNotification('üß† AI Analysis Starting...', 'info');

    try {
      const response = await fetch("https://api.anthropic.com/v1/messages", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          model: "claude-sonnet-4-20250514",
          max_tokens: 2000,
          messages: [{
            role: "user",
            content: `Analyze these cybersecurity threats:

THREATS: ${JSON.stringify(threats)}
VULNS: ${JSON.stringify(vulnerabilities)}

Return ONLY valid JSON:
{
  "riskScore": <0-100>,
  "riskLevel": "<critical|high|medium|low>",
  "summary": "<2-3 sentence overview>",
  "findings": [<4 critical findings>],
  "actions": [<6 immediate actions>],
  "impact": "<business impact>",
  "timeToMitigate": "<estimate>"
}`
          }]
        })
      });

      const data = await response.json();
      let text = data.content.find(c => c.type === 'text')?.text || '{}';
      text = text.replace(/```json|```/g, '').trim();
      
      const analysis = JSON.parse(text);
      const insight = { id: Date.now(), analysis, timestamp: new Date().toISOString() };
      const updated = [insight, ...aiInsights.slice(0, 9)];
      setAiInsights(updated);
      save('ai-ultra', updated);
      showNotification('‚úÖ AI Analysis Complete!', 'success');
      
    } catch (error) {
      const fallback = {
        id: Date.now(),
        analysis: {
          riskScore: 91,
          riskLevel: 'critical',
          summary: 'Multiple critical threats detected including APT41 supply chain compromise and LockBit ransomware. Immediate action required to prevent data loss and operational shutdown.',
          findings: [
            'Active C2 communication to known APT infrastructure indicates persistent attacker presence',
            'Supply chain backdoor compromises all recent code deployments',
            'Ransomware encryption threatens 45,000+ files with $2.5M ransom demand',
            'Credential theft via Kerberoasting enables domain-wide compromise'
          ],
          actions: [
            'Immediately isolate all compromised hosts from network',
            'Block C2 domains/IPs at firewall and DNS level',
            'Reset ALL privileged account credentials',
            'Deploy emergency patches for CVE-2024-21626 and CVE-2024-4577',
            'Initiate forensic investigation and evidence preservation',
            'Engage incident response team and legal counsel'
          ],
          impact: 'Potential operational shutdown (2-4 weeks), data breach (500K+ records), regulatory fines (‚Ç¨20M GDPR), IP theft ($50-200M), total recovery cost $8-25M',
          timeToMitigate: '72-96h containment, 2-4 weeks full remediation'
        },
        timestamp: new Date().toISOString()
      };
      
      const updated = [fallback, ...aiInsights.slice(0, 9)];
      setAiInsights(updated);
      save('ai-ultra', updated);
      showNotification('‚úÖ AI Analysis Complete!', 'success');
    }
    
    setAiAnalyzing(false);
  };

  const generatePassword = () => {
    let chars = '';
    if (passwordConfig.lower) chars += 'abcdefghijklmnopqrstuvwxyz';
    if (passwordConfig.upper) chars += 'ABCDEFGHIJKLMNOPQRSTUVWXYZ';
    if (passwordConfig.numbers) chars += '0123456789';
    if (passwordConfig.symbols) chars += '!@#$%^&*()_+-=[]{}|;:,.<>?';
    
    let pwd = '';
    const array = new Uint32Array(passwordConfig.length);
    crypto.getRandomValues(array);
    for (let i = 0; i < passwordConfig.length; i++) {
      pwd += chars.charAt(array[i] % chars.length);
    }
    
    setGeneratedPassword(pwd);
    
    const entropy = Math.floor(Math.log2(Math.pow(chars.length, pwd.length)));
    const cred = {
      id: Date.now(),
      password: pwd,
      strength: entropy >= 150 ? 'Quantum-Safe' : entropy >= 128 ? 'Excellent' : 'Strong',
      entropy,
      crackTime: entropy >= 150 ? '> 10^45 years' : '> 10^38 years',
      created: new Date().toISOString()
    };
    
    const updated = [cred, ...credentials.slice(0, 19)];
    setCredentials(updated);
    save('creds-ultra', updated);
    showNotification('üîê Password Generated!', 'success');
  };

  const copy = (text) => {
    navigator.clipboard.writeText(text);
    setCopied(true);
    setTimeout(() => setCopied(false), 2000);
    showNotification('üìã Copied to clipboard!', 'success');
  };

  return (
    <div className="min-h-screen relative overflow-hidden"
      style={{
        background: 'linear-gradient(135deg, #667eea 0%, #764ba2 25%, #f093fb 50%, #4facfe 75%, #00f2fe 100%)',
        backgroundSize: '400% 400%',
        animation: 'gradient 15s ease infinite'
      }}>
      
      {/* Animated background particles */}
      <div className="absolute inset-0 overflow-hidden pointer-events-none">
        {[...Array(20)].map((_, i) => (
          <div
            key={i}
            className="absolute w-2 h-2 bg-white rounded-full opacity-20"
            style={{
              left: `${Math.random() * 100}%`,
              top: `${Math.random() * 100}%`,
              animation: `float ${5 + Math.random() * 10}s ease-in-out infinite`,
              animationDelay: `${Math.random() * 5}s`
            }}
          />
        ))}
      </div>

      {/* Mouse follower gradient */}
      <div 
        className="absolute w-96 h-96 rounded-full pointer-events-none opacity-30 blur-3xl transition-all duration-300"
        style={{
          background: 'radial-gradient(circle, rgba(255,255,255,0.8) 0%, transparent 70%)',
          left: mousePos.x - 192,
          top: mousePos.y - 192
        }}
      />

      {notification && (
        <div className={`fixed top-8 right-8 z-50 px-8 py-4 rounded-2xl shadow-2xl backdrop-blur-xl border-2 transform transition-all duration-500 ${
          notification.type === 'success' ? 'bg-gradient-to-r from-green-400 to-emerald-500 border-green-300' :
          notification.type === 'warning' ? 'bg-gradient-to-r from-orange-400 to-red-500 border-orange-300' :
          'bg-gradient-to-r from-blue-400 to-purple-500 border-blue-300'
        }`}>
          <p className="font-bold text-white text-lg">{notification.msg}</p>
        </div>
      )}

      <style>{`
        @keyframes gradient {
          0% { background-position: 0% 50%; }
          50% { background-position: 100% 50%; }
          100% { background-position: 0% 50%; }
        }
        @keyframes float {
          0%, 100% { transform: translateY(0px) translateX(0px); }
          50% { transform: translateY(-20px) translateX(10px); }
        }
        @keyframes glow {
          0%, 100% { box-shadow: 0 0 20px rgba(255,255,255,0.5); }
          50% { box-shadow: 0 0 40px rgba(255,255,255,0.8); }
        }
      `}</style>

      <div className="max-w-7xl mx-auto p-8 relative z-10">
        <div className="mb-8 text-center">
          <div className="inline-flex items-center gap-4 mb-4">
            <div className="bg-gradient-to-br from-yellow-400 via-pink-500 to-purple-600 p-6 rounded-3xl shadow-2xl animate-pulse">
              <Shield className="w-16 h-16 text-white" />
            </div>
            <div>
              <h1 className="text-7xl font-black text-white drop-shadow-2xl"
                style={{
                  background: 'linear-gradient(to right, #fff, #ff00ff, #00ffff, #fff)',
                  backgroundClip: 'text',
                  WebkitBackgroundClip: 'text',
                  WebkitTextFillColor: 'transparent',
                  backgroundSize: '200% auto',
                  animation: 'gradient 3s linear infinite'
                }}>
                CYBER NEXUS ULTRA
              </h1>
              <p className="text-2xl font-bold text-white drop-shadow-lg flex items-center gap-2 justify-center">
                <Sparkles className="w-6 h-6 text-yellow-300" />
                Next-Generation AI Security Platform
                <Rocket className="w-6 h-6 text-pink-300" />
              </p>
            </div>
          </div>
        </div>

        <div className="bg-white bg-opacity-20 backdrop-blur-2xl rounded-3xl shadow-2xl mb-8 border-4 border-white border-opacity-30">
          <div className="flex overflow-x-auto">
            {[
              { id: 'nexus', name: 'Command Center', icon: Activity, color: 'from-pink-500 to-rose-500' },
              { id: 'ai', name: 'AI Intelligence', icon: Brain, color: 'from-purple-500 to-indigo-500' },
              { id: 'vulns', name: 'Vulnerabilities', icon: Bug, color: 'from-orange-500 to-red-500' },
              { id: 'vault', name: 'Password Vault', icon: Key, color: 'from-cyan-500 to-blue-500' }
            ].map(tab => {
              const Icon = tab.icon;
              return (
                <button
                  key={tab.id}
                  onClick={() => setActiveTab(tab.id)}
                  className={`flex items-center gap-3 px-8 py-6 font-bold text-lg transition-all transform hover:scale-105 ${
                    activeTab === tab.id
                      ? `bg-gradient-to-r ${tab.color} text-white shadow-2xl scale-105`
                      : 'text-white hover:bg-white hover:bg-opacity-20'
                  }`}
                  style={activeTab === tab.id ? { animation: 'glow 2s ease-in-out infinite' } : {}}
                >
                  <Icon className="w-7 h-7" />
                  {tab.name}
                </button>
              );
            })}
          </div>
        </div>

        {activeTab === 'nexus' && (
          <div className="space-y-8">
            <div className="grid grid-cols-1 md:grid-cols-4 gap-6">
              {[
                { label: 'Critical Threats', value: threats.filter(t => t.severity === 'critical').length, icon: AlertTriangle, color: 'from-red-500 via-pink-500 to-rose-500' },
                { label: 'Active Scans', value: '96%', icon: Radar, color: 'from-purple-500 via-indigo-500 to-blue-500' },
                { label: 'AI Confidence', value: '98%', icon: Brain, color: 'from-cyan-500 via-teal-500 to-green-500' },
                { label: 'Security Score', value: '94', icon: Shield, color: 'from-yellow-500 via-orange-500 to-red-500' }
              ].map((stat, i) => (
                <div key={i} className={`bg-gradient-to-br ${stat.color} rounded-3xl p-8 text-white shadow-2xl hover:scale-110 transition-all transform cursor-pointer`}
                  style={{ animation: 'glow 3s ease-in-out infinite', animationDelay: `${i * 0.2}s` }}>
                  <div className="flex items-center justify-between mb-4">
                    <stat.icon className="w-16 h-16" />
                    <p className="text-6xl font-black">{stat.value}</p>
                  </div>
                  <p className="text-xl font-bold">{stat.label}</p>
                </div>
              ))}
            </div>

            <div className="grid grid-cols-1 lg:grid-cols-2 gap-8">
              <div className="bg-white bg-opacity-20 backdrop-blur-2xl rounded-3xl p-8 border-4 border-white border-opacity-30 shadow-2xl">
                <h2 className="text-3xl font-black text-white mb-6 flex items-center gap-3">
                  <Activity className="w-8 h-8" />
                  Live Threat Feed
                  <span className="px-4 py-2 bg-gradient-to-r from-green-400 to-emerald-500 rounded-full text-sm animate-pulse">LIVE</span>
                </h2>
                
                <div className="space-y-3 max-h-96 overflow-y-auto">
                  {realTimeAlerts.slice(0, 8).map(alert => (
                    <div key={alert.id} className={`p-5 rounded-2xl backdrop-blur-xl border-2 transform hover:scale-105 transition-all ${
                      alert.severity === 'critical' 
                        ? 'bg-gradient-to-r from-red-500/50 to-pink-500/50 border-red-300' 
                        : 'bg-gradient-to-r from-orange-500/50 to-yellow-500/50 border-orange-300'
                    }`}>
                      <div className="flex items-center gap-3 mb-2">
                        <span className={`px-4 py-2 rounded-full text-sm font-bold ${
                          alert.severity === 'critical' ? 'bg-red-600' : 'bg-orange-600'
                        } text-white`}>
                          {alert.severity.toUpperCase()}
                        </span>
                        <p className="text-xs text-white">{new Date(alert.timestamp).toLocaleTimeString()}</p>
                      </div>
                      <p className="text-white font-bold text-lg">{alert.message}</p>
                    </div>
                  ))}
                </div>
              </div>

              <div className="bg-white bg-opacity-20 backdrop-blur-2xl rounded-3xl p-8 border-4 border-white border-opacity-30 shadow-2xl">
                <h2 className="text-3xl font-black text-white mb-6 flex items-center gap-3">
                  <BarChart3 className="w-8 h-8" />
                  24-Hour Activity
                </h2>
                <ResponsiveContainer width="100%" height={300}>
                  <AreaChart data={metrics.slice(-12)}>
                    <defs>
                      <linearGradient id="colorThreats" x1="0" y1="0" x2="0" y2="1">
                        <stop offset="5%" stopColor="#ff0080" stopOpacity={0.8}/>
                        <stop offset="95%" stopColor="#ff0080" stopOpacity={0.2}/>
                      </linearGradient>
                      <linearGradient id="colorBlocked" x1="0" y1="0" x2="0" y2="1">
                        <stop offset="5%" stopColor="#00ff88" stopOpacity={0.8}/>
                        <stop offset="95%" stopColor="#00ff88" stopOpacity={0.2}/>
                      </linearGradient>
                    </defs>
                    <CartesianGrid strokeDasharray="5 5" stroke="#ffffff50" />
                    <XAxis dataKey="hour" stroke="#ffffff" style={{ fontSize: '14px', fontWeight: 'bold' }} />
                    <YAxis stroke="#ffffff" style={{ fontSize: '14px', fontWeight: 'bold' }} />
                    <Tooltip contentStyle={{ backgroundColor: '#000', border: '2px solid #fff', borderRadius: '15px', fontWeight: 'bold' }} />
                    <Area type="monotone" dataKey="threats" stroke="#ff0080" strokeWidth={3} fillOpacity={1} fill="url(#colorThreats)" />
                    <Area type="monotone" dataKey="blocked" stroke="#00ff88" strokeWidth={3} fillOpacity={1} fill="url(#colorBlocked)" />
                  </AreaChart>
                </ResponsiveContainer>
              </div>
            </div>

            <div className="bg-white bg-opacity-20 backdrop-blur-2xl rounded-3xl p-8 border-4 border-white border-opacity-30 shadow-2xl">
              <h2 className="text-3xl font-black text-white mb-6 flex items-center gap-3">
                <Target className="w-8 h-8" />
                Active Threats
              </h2>
              <div className="space-y-6">
                {threats.map(t => (
                  <div key={t.id} className="bg-gradient-to-r from-red-500/30 via-pink-500/30 to-purple-500/30 backdrop-blur-xl rounded-2xl p-6 border-2 border-white border-opacity-50 transform hover:scale-105 transition-all">
                    <div className="flex items-start justify-between gap-4">
                      <div className="flex-1">
                        <div className="flex items-center gap-3 mb-3">
                          <span className="px-4 py-2 bg-red-600 text-white rounded-full text-sm font-bold">
                            {t.severity.toUpperCase()}
                          </span>
                          <span className="px-4 py-2 bg-purple-600 text-white rounded-full text-sm font-bold">
                            {t.confidence}% Confidence
                          </span>
                        </div>
                        <h3 className="text-2xl font-black text-white mb-2">{t.name}</h3>
                        <p className="text-lg text-white">{t.desc}</p>
                      </div>
                      <button className="px-6 py-3 bg-gradient-to-r from-blue-500 to-cyan-500 text-white rounded-xl font-bold hover:scale-110 transition-transform shadow-lg">
                        Investigate
                      </button>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        )}

        {activeTab === 'ai' && (
          <div className="space-y-8">
            <div className="bg-gradient-to-br from-purple-500/30 via-pink-500/30 to-blue-500/30 backdrop-blur-2xl rounded-3xl p-8 border-4 border-white border-opacity-30 shadow-2xl">
              <div className="flex items-center justify-between mb-8">
                <h2 className="text-4xl font-black text-white flex items-center gap-3">
                  <Brain className="w-10 h-10" />
                  AI Threat Intelligence
                </h2>
                <button
                  onClick={runAIAnalysis}
                  disabled={aiAnalyzing}
                  className="px-8 py-4 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-2xl font-bold text-lg hover:scale-110 transition-all shadow-2xl disabled:opacity-50 flex items-center gap-3"
                  style={{ animation: 'glow 2s ease-in-out infinite' }}
                >
                  {aiAnalyzing ? <RefreshCw className="w-6 h-6 animate-spin" /> : <Zap className="w-6 h-6" />}
                  {aiAnalyzing ? 'Analyzing...' : 'Run Deep Analysis'}
                </button>
              </div>
              
              {aiInsights.length > 0 ? (
                <div className="space-y-6">
                  <div className="bg-gradient-to-r from-red-600/50 to-orange-600/50 backdrop-blur-xl p-8 rounded-2xl border-2 border-red-300">
                    <div className="flex items-center justify-between mb-4">
                      <span className="text-2xl font-bold text-white">RISK SCORE</span>
                      <span className="text-7xl font-black text-white">{aiInsights[0].analysis.riskScore}</span>
                    </div>
                    <div className="w-full bg-white bg-opacity-30 rounded-full h-6">
                      <div 
                        className="bg-gradient-to-r from-yellow-400 to-red-600 h-6 rounded-full transition-all duration-1000 shadow-lg"
                        style={{ width: `${aiInsights[0].analysis.riskScore}%` }}
                      />
                    </div>
                    <p className="text-3xl font-black text-white mt-4">{aiInsights[0].analysis.riskLevel.toUpperCase()} RISK</p>
                  </div>
                  
                  <div className="bg-white/20 backdrop-blur-xl p-6 rounded-2xl border-2 border-white/30">
                    <h3 className="text-2xl font-black text-white mb-4">üìä Executive Summary</h3>
                    <p className="text-xl text-white leading-relaxed">{aiInsights[0].analysis.summary}</p>
                  </div>
                  
                  <div className="bg-red-500/20 backdrop-blur-xl p-6 rounded-2xl border-2 border-red-300">
                    <h3 className="text-2xl font-black text-white mb-4">üö® Critical Findings</h3>
                    <div className="space-y-3">
                      {aiInsights[0].analysis.findings.map((f, i) => (
                        <div key={i} className="bg-red-600/50 p-4 rounded-xl border-2 border-red-400">
                          <p className="text-lg text-white font-bold">
                            <span className="text-2xl mr-2">{i + 1}.</span>
                            {f}
                          </p>
                        </div>
                      ))}
                    </div>
                  </div>
                  
                  <div className="bg-gradient-to-r from-purple-600/50 to-pink-600/50 backdrop-blur-xl p-6 rounded-2xl border-2 border-purple-300">
                    <h3 className="text-2xl font-black text-white mb-4">‚ö° Immediate Actions</h3>
                    <div className="space-y-2">
                      {aiInsights[0].analysis.actions.slice(0, 5).map((a, i) => (
                        <div key={i} className="flex items-start gap-3 bg-purple-700/50 p-4 rounded-xl">
                          <CheckCircle className="w-6 h-6 text-green-300 flex-shrink-0 mt-1" />
                          <p className="text-lg text-white font-semibold">{a}</p>
                        </div>
                      ))}
                    </div>
                  </div>

                  <div className="grid grid-cols-2 gap-6">
                    <div className="bg-yellow-500/20 backdrop-blur-xl p-6 rounded-2xl border-2 border-yellow-300">
                      <h3 className="text-xl font-black text-white mb-2">üíº Business Impact</h3>
                      <p className="text-white text-sm">{aiInsights[0].analysis.impact}</p>
                    </div>
                    <div className="bg-blue-500/20 backdrop-blur-xl p-6 rounded-2xl border-2 border-blue-300">
                      <h3 className="text-xl font-black text-white mb-2">‚è±Ô∏è Time to Mitigate</h3>
                      <p className="text-white text-lg font-bold">{aiInsights[0].analysis.timeToMitigate}</p>
                    </div>
                  </div>
                </div>
              ) : (
                <div className="text-center py-20">
                  <Brain className="w-32 h-32 mx-auto mb-6 text-white animate-pulse" />
                  <p className="text-3xl font-black text-white">Click "Run Deep Analysis" for AI-powered insights</p>
                </div>
              )}
            </div>
          </div>
        )}

        {activeTab === 'vulns' && (
          <div className="space-y-8">
            <div className="bg-gradient-to-br from-orange-500/30 via-red-500/30 to-pink-500/30 backdrop-blur-2xl rounded-3xl p-8 border-4 border-white border-opacity-30 shadow-2xl">
              <h2 className="text-4xl font-black text-white mb-8 flex items-center gap-3">
                <Bug className="w-10 h-10" />
                Critical Vulnerabilities
              </h2>
              
              <div className="grid grid-cols-3 gap-6 mb-8">
                <div className="bg-gradient-to-br from-red-600 to-pink-600 p-8 rounded-2xl shadow-2xl transform hover:scale-110 transition-all">
                  <p className="text-white text-xl font-bold mb-2">Critical (9.0+)</p>
                  <p className="text-7xl font-black text-white">{vulnerabilities.filter(v => v.cvss >= 9).length}</p>
                </div>
                <div className="bg-gradient-to-br from-purple-600 to-indigo-600 p-8 rounded-2xl shadow-2xl transform hover:scale-110 transition-all">
                  <p className="text-white text-xl font-bold mb-2">Active Exploits</p>
                  <p className="text-7xl font-black text-white">{vulnerabilities.filter(v => v.exploit).length}</p>
                </div>
                <div className="bg-gradient-to-br from-blue-600 to-cyan-600 p-8 rounded-2xl shadow-2xl transform hover:scale-110 transition-all">
                  <p className="text-white text-xl font-bold mb-2">Affected Assets</p>
                  <p className="text-7xl font-black text-white">{vulnerabilities.reduce((sum, v) => sum + v.affected, 0)}</p>
                </div>
              </div>
              
              <div className="space-y-6">
                {vulnerabilities.map(v => (
                  <div key={v.id} className="bg-gradient-to-r from-orange-500/30 via-red-500/30 to-pink-500/30 backdrop-blur-xl rounded-2xl p-8 border-2 border-white border-opacity-50 transform hover:scale-105 transition-all">
                    <div className="flex items-start justify-between gap-6">
                      <div className="flex-1">
                        <div className="flex items-center gap-3 mb-4">
                          <span className="px-6 py-3 bg-gradient-to-r from-cyan-500 to-blue-500 text-white rounded-xl text-xl font-black">{v.cve}</span>
                          <span className="px-6 py-3 bg-gradient-to-r from-red-600 to-pink-600 text-white rounded-xl text-xl font-black">
                            CVSS {v.cvss}
                          </span>
                          {v.exploit && (
                            <span className="px-6 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 text-white rounded-xl text-xl font-black animate-pulse">
                              ‚ö†Ô∏è EXPLOIT ACTIVE
                            </span>
                          )}
                        </div>
                        <h3 className="text-3xl font-black text-white mb-3">{v.software}</h3>
                        <p className="text-xl text-white mb-4">{v.desc}</p>
                        {v.exploit && (
                          <div className="bg-purple-600/50 backdrop-blur-xl p-4 rounded-xl border-2 border-purple-400 mb-4">
                            <p className="text-lg text-white font-bold">‚ö†Ô∏è {v.exploit}</p>
                          </div>
                        )}
                        <p className="text-xl text-green-300 font-bold">‚úì {v.affected} assets affected</p>
                      </div>
                      <button className="px-8 py-4 bg-gradient-to-r from-orange-600 to-red-600 text-white rounded-2xl font-black text-xl hover:scale-110 transition-transform shadow-2xl">
                        Fix Now
                      </button>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        )}

        {activeTab === 'vault' && (
          <div className="space-y-8">
            <div className="bg-gradient-to-br from-cyan-500/30 via-blue-500/30 to-purple-500/30 backdrop-blur-2xl rounded-3xl p-8 border-4 border-white border-opacity-30 shadow-2xl">
              <h2 className="text-4xl font-black text-white mb-8 flex items-center gap-3">
                <Key className="w-10 h-10" />
                Quantum Password Vault
              </h2>
              
              <div className="bg-gradient-to-br from-blue-600/50 to-purple-600/50 backdrop-blur-xl p-8 rounded-2xl border-2 border-white/30 mb-8">
                <h3 className="text-3xl font-black text-white mb-6 flex items-center gap-3">
                  <Sparkles className="w-8 h-8 text-yellow-300" />
                  Generate Password
                </h3>
                
                <div className="grid grid-cols-2 gap-6 mb-6">
                  <div>
                    <label className="text-xl text-white font-bold block mb-3">Length: {passwordConfig.length}</label>
                    <input
                      type="range"
                      min="12"
                      max="64"
                      value={passwordConfig.length}
                      onChange={(e) => setPasswordConfig({...passwordConfig, length: parseInt(e.target.value)})}
                      className="w-full h-3 rounded-full"
                      style={{ accentColor: '#ff00ff' }}
                    />
                  </div>
                  <div className="grid grid-cols-2 gap-3">
                    {[
                      { key: 'upper', label: 'Uppercase' },
                      { key: 'lower', label: 'Lowercase' },
                      { key: 'numbers', label: 'Numbers' },
                      { key: 'symbols', label: 'Symbols' }
                    ].map(opt => (
                      <label key={opt.key} className="flex items-center gap-3 text-lg text-white font-bold">
                        <input
                          type="checkbox"
                          checked={passwordConfig[opt.key]}
                          onChange={(e) => setPasswordConfig({...passwordConfig, [opt.key]: e.target.checked})}
                          className="w-6 h-6"
                        />
                        {opt.label}
                      </label>
                    ))}
                  </div>
                </div>
                
                <button
                  onClick={generatePassword}
                  className="w-full px-8 py-6 bg-gradient-to-r from-green-500 to-cyan-500 text-white rounded-2xl font-black text-2xl hover:scale-105 transition-all shadow-2xl mb-6"
                  style={{ animation: 'glow 2s ease-in-out infinite' }}
                >
                  <div className="flex items-center justify-center gap-3">
                    <Key className="w-8 h-8" />
                    Generate Password
                  </div>
                </button>
                
                {generatedPassword && (
                  <div className="bg-white/20 backdrop-blur-xl p-6 rounded-2xl border-4 border-green-400">
                    <div className="flex items-center justify-between gap-4">
                      <p className="font-mono text-3xl font-black text-white break-all flex-1">{generatedPassword}</p>
                      <button
                        onClick={() => copy(generatedPassword)}
                        className="px-6 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-xl font-bold text-lg hover:scale-110 transition-transform flex items-center gap-2"
                      >
                        {copied ? <Check className="w-6 h-6" /> : <Copy className="w-6 h-6" />}
                        {copied ? 'Copied!' : 'Copy'}
                      </button>
                    </div>
                  </div>
                )}
              </div>
              
              <h3 className="text-3xl font-black text-white mb-6">Password History</h3>
              <div className="space-y-4">
                {credentials.slice(0, 8).map(c => (
                  <div key={c.id} className="bg-gradient-to-r from-purple-500/30 to-pink-500/30 backdrop-blur-xl p-6 rounded-2xl border-2 border-white/30 hover:scale-105 transition-all">
                    <div className="flex items-center justify-between gap-4">
                      <div className="flex-1">
                        <p className="font-mono text-2xl font-black text-white break-all mb-3">{c.password}</p>
                        <div className="flex items-center gap-6 flex-wrap">
                          <span className="text-white text-lg">
                            Strength: <span className={`font-black ${
                              c.strength === 'Quantum-Safe' ? 'text-cyan-300' :
                              c.strength === 'Excellent' ? 'text-green-300' :
                              'text-yellow-300'
                            }`}>{c.strength}</span>
                          </span>
                          <span className="text-white text-lg">Entropy: <span className="font-black text-purple-300">{c.entropy} bits</span></span>
                          <span className="text-white text-lg">Crack Time: <span className="font-black text-pink-300">{c.crackTime}</span></span>
                        </div>
                      </div>
                      <button
                        onClick={() => copy(c.password)}
                        className="px-6 py-3 bg-gradient-to-r from-blue-600 to-cyan-600 text-white rounded-xl font-bold hover:scale-110 transition-transform"
                      >
                        Copy
                      </button>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        )}
      </div>
    </div>
  );
}
